<% if current_user.liked?(micropost) %>
  <%= form_with(model: current_user.likes.find_by(micropost_id: micropost.id), method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Unlike', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.likes.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Like', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>
